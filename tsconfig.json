    "compilerOptions": {
      "module": "commonjs",
      "lib": [ "es2015", "es2017", "dom" ],
      "target": "es5",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true
    },
    "include": [
        "src"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }